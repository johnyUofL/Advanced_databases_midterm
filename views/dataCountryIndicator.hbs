<div class="container mt-5">
  <form id="form2" method="GET">
    <div class="form-group">
      <label for="country">Country</label>
      <select name="country" class="form-control" id="country">
        {{#each countries}}
          <option value="{{this.CountryName}}">{{this.CountryName}}</option>
        {{/each}}
      </select>
    </div>

    <div class="form-group">
      <label for="indicator">Indicator</label>
      <select name="indicator" class="form-control" id="indicator">
        {{#each indicators}}
          <option value="{{this.SeriesName}}">{{this.SeriesName}}</option>
        {{/each}}
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

  <div class="mt-4">
    <canvas id="chart" style="width: 400px; height: 200px;"></canvas>
  </div>

<button id="downloadButton" class="btn btn-danger mt-3">
  <i class="fas fa-save me-2"></i>Download Graph
</button>

<script
  src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"
></script>
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"
></script>
<!-- Include Chart.js library -->
<script src="main.js"></script>
